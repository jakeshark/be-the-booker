{
  "$id": "schema/announcer.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Announcer",
  "type": "object",
  "required": [
    "id",
    "name",
    "role",
    "skill",
    "brand_fit",
    "chemistry_map"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "role": {
      "enum": [
        "pbp",
        "color"
      ]
    },
    "skill": {
      "type": "number",
      "minimum": 0,
      "maximum": 100
    },
    "brand_fit": {
      "type": "number",
      "minimum": 0,
      "maximum": 100
    },
    "chemistry_map": {
      "type": "object",
      "additionalProperties": {
        "type": "number"
      }
    }
  }
}