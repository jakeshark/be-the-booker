{
  "$id": "schema/feud.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Feud",
  "type": "object",
  "required": [
    "id",
    "participants",
    "heat",
    "stakes",
    "arc_phase",
    "consistency",
    "chemistry",
    "need_resolution"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "participants": {
      "type": "array",
      "minItems": 2,
      "items": {
        "type": "string"
      }
    },
    "heat": {
      "type": "number",
      "minimum": 0,
      "maximum": 100
    },
    "stakes": {
      "type": "integer",
      "minimum": 0,
      "maximum": 3
    },
    "arc_phase": {
      "enum": [
        "intro",
        "escalation",
        "crisis",
        "blowoff"
      ]
    },
    "consistency": {
      "type": "integer",
      "minimum": 0
    },
    "chemistry": {
      "type": "number",
      "minimum": 0,
      "maximum": 100
    },
    "need_resolution": {
      "type": "boolean"
    }
  }
}