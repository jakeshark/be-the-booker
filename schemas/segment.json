{
  "$id": "schema/segment.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Segment",
  "type": "object",
  "required": [
    "id",
    "type",
    "participants",
    "duration_min",
    "intent",
    "placement_idx"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "type": {
      "enum": [
        "match",
        "promo",
        "angle"
      ]
    },
    "participants": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "duration_min": {
      "type": "number",
      "minimum": 1
    },
    "intent": {
      "enum": [
        "advance_feud",
        "elevate",
        "cool_down",
        "debut",
        "crowd_work",
        "blowoff"
      ]
    },
    "stipulation": {
      "type": "string"
    },
    "risk_level": {
      "enum": [
        "low",
        "med",
        "high"
      ]
    },
    "placement_idx": {
      "type": "integer",
      "minimum": 0
    },
    "title_match": {
      "type": "boolean"
    },
   "feud_id": { "type": ["string", "null"] }
    "interference": {
      "enum": [
        "none",
        "possible",
        "planned"
      ]
    },
    "notes": {
      "type": "string"
    }
  }
}
